    "@radix-ui/react-tooltip": "^1.0.7",
    "@vercel/postgres": "^0.7.2",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "crypto": "^1.0.1",
    "next": "14.2.3",
